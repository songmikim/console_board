<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.koreait.board.mappers.BoardMapper">
    <insert id="register" useGeneratedKeys="true" keyProperty="seq">
        INSERT INTO board (subject, content, seq)
        VALUES (#{subject}, #{content}, #{seq})
    </insert>
    <update id="update">
        UPDATE board
        <set>
            <if test="subject != null">
                subject = #{subject},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            modDt = CURRENT_TIMESTAMP
        </set>
        <where>
            seq = #{seq}
        </where>
    </update>
    <delete id="delete">
        DELETE FROM board WHERE seq=#{seq}
    </delete>

    <select id="get">
        SELECT * FROM board WHERE seq=#{seq}
    </select>

    <select id="getList">
        SELECT b.*, m.name, m.email FROM board b
        LEFT JOIN member m ON b.Seq = m.seq
        <where>
            <if test="skey != null">
                <bind name="keyword" value="'%' + _parameter.getSkey() + '%'" />
                <if test="sopt == 'subject'">
                    AND subject LIKE #{keyword}
                </if>
                <if test="sopt == 'content'">
                    AND content LIKE #{keyword}
                </if>
                <if test="sopt == null">
                    CONCAT(subject, content) LIKE #{keyword}
                </if>
            </if>
        </where>
        ORDER BY regDt DESC LIMIT #{offset}, #{limit}
    </select>
</mapper>